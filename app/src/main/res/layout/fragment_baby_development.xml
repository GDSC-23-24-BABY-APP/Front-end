<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".BabyDevelopment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/mainColor">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="NEWS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#525252"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingVertical="10dp"
        android:text="주차별 아기 발달"
        android:textColor="#525252"
        android:textSize="16dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:layout_marginHorizontal="17dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/border_maincolor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/previous_week_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#00000000"
                android:src="@drawable/baseline_arrow_back_ios_24" />

            <TextView
                android:id="@+id/week_of_baby"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0~5주차"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="16dp"
                android:textColor="#525252"/>

            <ImageButton
                android:id="@+id/next_week_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_arrow_forward_ios_24"
                android:backgroundTint="#00000000"/>


        </LinearLayout>

        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:background="#FF7272"/>

        <TextView
            android:id="@+id/week_baby_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:textSize="13dp"
            android:text="주차별 아기 발달"
            android:gravity="center"/>

    </FrameLayout>

</LinearLayout>