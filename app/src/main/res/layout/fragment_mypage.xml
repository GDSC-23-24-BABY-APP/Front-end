<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MypageFragment"
    android:background="@color/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/mypage_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MY PAGE"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/mainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/mypage_profile_cv"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="94dp"
        app:cardCornerRadius="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/mypage_profile_iv"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/iv_mypage_profile" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mypage_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/mainText"
        android:layout_marginStart="32dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/mypage_profile_cv"
        app:layout_constraintTop_toTopOf="@id/mypage_profile_cv" />

    <TextView
        android:id="@+id/mypage_mom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MOM"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/mainText"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toEndOf="@id/mypage_name_tv"
        app:layout_constraintTop_toTopOf="@id/mypage_profile_cv" />

    <TextView
        android:id="@+id/mypage_id_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aster03"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:textStyle="italic"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/mypage_name_tv"
        app:layout_constraintTop_toBottomOf="@id/mypage_name_tv" />

    <TextView
        android:id="@+id/mypage_birthdate_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21"
        android:textSize="16sp"
        android:textColor="@color/highlight"
        android:textStyle="bold"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toStartOf="@id/mypage_name_tv"
        app:layout_constraintTop_toBottomOf="@id/mypage_id_tv" />

    <TextView
        android:id="@+id/mypage_stndrdth_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="th"
        android:textSize="16sp"
        android:textColor="@color/mainText"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toEndOf="@id/mypage_birthdate_tv"
        app:layout_constraintTop_toBottomOf="@id/mypage_id_tv" />

    <TextView
        android:id="@+id/mypage_daywith_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" day with "
        android:textSize="16sp"
        android:textColor="@color/mainText"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toEndOf="@id/mypage_stndrdth_tv"
        app:layout_constraintTop_toBottomOf="@id/mypage_id_tv" />

    <TextView
        android:id="@+id/mypage_birthname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sweety"
        android:textSize="16sp"
        android:textColor="@color/highlight"
        android:textStyle="bold"
        android:layout_marginTop="11dp"
        app:layout_constraintStart_toEndOf="@id/mypage_daywith_tv"
        app:layout_constraintTop_toBottomOf="@id/mypage_id_tv" />

    <View
        android:id="@+id/mypage_division_view"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:layout_marginTop="51dp"
        android:background="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage_birthdate_tv" />

    <LinearLayout
        android:id="@+id/mypage_myinfo_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mypage_division_view"
        android:background="@drawable/background_subcolor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_myinfo"
            android:layout_gravity="center"
            android:layout_marginTop="14.4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My info"
            android:textSize="18sp"
            android:textColor="@color/mainText"
            android:layout_gravity="center"
            android:layout_marginTop="5.1dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypage_babyinfo_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@id/mypage_myinfo_btn"
        app:layout_constraintTop_toBottomOf="@id/mypage_division_view"
        android:background="@drawable/background_subcolor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_babyinfo"
            android:layout_gravity="center"
            android:layout_marginTop="14.4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baby info"
            android:textSize="18sp"
            android:textColor="@color/mainText"
            android:layout_gravity="center"
            android:layout_marginTop="5.1dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypage_link_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@id/mypage_babyinfo_btn"
        app:layout_constraintTop_toBottomOf="@id/mypage_division_view"
        android:background="@drawable/background_subcolor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_link"
            android:layout_gravity="center"
            android:layout_marginTop="14.4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Link"
            android:textSize="18sp"
            android:textColor="@color/mainText"
            android:layout_gravity="center"
            android:layout_marginTop="5.1dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypage_settings_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@id/mypage_myinfo_btn"
        app:layout_constraintTop_toBottomOf="@id/mypage_myinfo_btn"
        android:background="@drawable/background_subcolor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_settings"
            android:layout_gravity="center"
            android:layout_marginTop="14.4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18sp"
            android:textColor="@color/mainText"
            android:layout_gravity="center"
            android:layout_marginTop="5.1dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypage_howtouse_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@id/mypage_settings_btn"
        app:layout_constraintTop_toBottomOf="@id/mypage_myinfo_btn"
        android:background="@drawable/background_subcolor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_howtouse"
            android:layout_gravity="center"
            android:layout_marginTop="14.4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How to use"
            android:textSize="16sp"
            android:textColor="@color/mainText"
            android:layout_gravity="center"
            android:layout_marginTop="5.1dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mypage_notion_btn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toEndOf="@id/mypage_howtouse_btn"
        app:layout_constraintTop_toBottomOf="@id/mypage_myinfo_btn"
        android:background="@drawable/background_subcolor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_notion"
            android:layout_gravity="center"
            android:layout_marginTop="14.4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notion"
            android:textSize="18sp"
            android:textColor="@color/mainText"
            android:layout_gravity="center"
            android:layout_marginTop="5.1dp" />

    </LinearLayout>

    <Button
        android:id="@+id/mypage_logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout >"
        android:textSize="30sp"
        android:textColor="@color/mainText"
        android:fontFamily="@font/leeseoyun"
        android:background="@android:color/transparent"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>