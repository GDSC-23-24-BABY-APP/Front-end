<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FindpwFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/findpw_topbar_cl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/findpw_back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/mainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/findpw_appname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TO BE MOM"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/findpw_idpw_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findpw_topbar_cl"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID 찾기"
            android:textSize="12sp"
            android:textColor="@color/mainText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PW 찾기"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/mainText"
            android:layout_marginStart="86dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/findpw_essential1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 필수"
        android:textColor="#ff0000"
        android:textSize="12sp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findpw_idpw_ll" />

    <EditText
        android:id="@+id/findpw_id_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="아이디 입력"
        android:textSize="14sp"
        android:background="@drawable/edge_2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findpw_essential1_tv" />

    <TextView
        android:id="@+id/findpw_essential2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 필수"
        android:textColor="#ff0000"
        android:textSize="12sp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findpw_id_et" />

    <EditText
        android:id="@+id/findpw_phonenum_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="휴대폰 번호 입력"
        android:textSize="14sp"
        android:background="@drawable/edge_2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findpw_essential2_tv" />

    <TextView
        android:id="@+id/findpw_alarmnum_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="올바른 휴대폰 번호를 입력해주세요."
        android:textSize="12sp"
        android:textColor="@color/mainText"
        android:layout_marginTop="6.32dp"
        app:layout_constraintStart_toStartOf="@id/findpw_phonenum_et"
        app:layout_constraintTop_toBottomOf="@+id/findpw_phonenum_et"
        android:visibility="gone" />

    <TextView
        android:id="@+id/findpw_essential3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* 필수"
        android:textColor="#ff0000"
        android:textSize="12sp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findpw_alarmnum_tv" />

    <EditText
        android:id="@+id/findpw_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="이름 입력"
        android:textSize="14sp"
        android:background="@drawable/edge_2dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/findpw_essential3_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/findpw_reset_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/background_maincolor"
        android:text="비밀번호 재설정"
        android:textSize="20sp"
        android:textColor="@color/mainText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>