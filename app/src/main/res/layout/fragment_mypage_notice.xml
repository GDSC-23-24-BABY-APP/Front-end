<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".NoticeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notice_topbar_cl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/notice_back_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/ic_back"
            android:backgroundTint="@color/mainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notice_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NOTICE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/mainText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notice_notice1_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앱 업데이트 안내 (2024/01/04)"
        android:textColor="@color/mainText"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_topbar_cl" />

    <View
        android:id="@+id/notice_division1_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_notice1_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notice_notice2_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="링크로 공유하기 서비스 시작 안내"
        android:textColor="@color/mainText"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_division1_view" />

    <View
        android:id="@+id/notice_division2_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_notice2_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notice_notice3_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DR.BARD 서비스 시작 안내"
        android:textColor="@color/mainText"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_division2_view" />

    <View
        android:id="@+id/notice_division3_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_notice3_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notice_notice4_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="앱 오류 해결 안내 (2023/12/16)"
        android:textColor="@color/mainText"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_division3_view" />

    <View
        android:id="@+id/notice_division4_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_notice4_btn" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/notice_notice5_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="감정 일기장 서비스 시작 안내"
        android:textColor="@color/mainText"
        android:textSize="20dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_division4_view" />

    <View
        android:id="@+id/notice_division5_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notice_notice5_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>