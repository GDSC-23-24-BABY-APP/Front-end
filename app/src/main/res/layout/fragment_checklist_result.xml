<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChecklistResult">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF7272">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHECK"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#525252"
            android:gravity="center"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜가 여기에 표시됩니다."
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"/>

    <TextView
        android:id="@+id/notice_checklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="127dp"
        android:text="해당하는 유산 증상에 체크해주세요."
        android:textSize="16dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="138dp"
        android:layout_height="48dp"
        android:background="@drawable/background_subcolor"
        android:text="건강 기록하기"
        android:textSize="16dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="31dp"/>

</FrameLayout>