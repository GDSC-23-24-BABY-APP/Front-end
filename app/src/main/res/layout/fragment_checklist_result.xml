<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ChecklistResult">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/custom_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FF7272">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CHECK"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#525252"
            android:gravity="center"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>


    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="날짜가 여기에 표시됩니다."
        android:textSize="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유산 사산 결과 보고서"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"/>

    <TextView
        android:id="@+id/resultOfCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여기에 결과가 나타납니다."
        android:textSize="16dp"
        android:layout_gravity="center_horizontal|center_vertical"
        android:gravity="center"/>

    <LinearLayout
        android:layout_gravity="bottom"
        android:layout_marginBottom="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSubmitResult"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:background="@drawable/background_subcolor"
            android:layout_marginLeft="40dp"
            android:text="건강 기록하기"
            android:textSize="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHospital"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:background="@drawable/background_subcolor"
            android:layout_marginLeft="35dp"
            android:text="주변 산부인과"
            android:textSize="16dp" />

    </LinearLayout>

</FrameLayout>